# super/mod key
set $mod Mod4
set $alt Alt

# i3 vars
font pango:monospace 10
default_border pixel 1

# monitors
exec --no-startup-id ~/.config/i3/monitors

# setup
exec --no-startup-id xset dpms 0 0 30
exec --no-startup-id xautolock -time 1 -locker "i3lock -n -e -f -c 000000"
exec --no-startup-id $HOME/.config/polybar/launch.sh
exec --no-startup-id dunst
exec --no-startup-id lxqt-policykit-agent  
exec --no-startup-id xset b off 
exec --no-startup-id feh --bg-scale ~/.wallpapers/main.jpg

# colors
# class                 border  backgr. text    indicator child_border
client.focused          #505050 #000000 #FFFFFF #FFFFFF   #505050
client.focused_inactive #202020 #000000 #FFFFFF #000000   #202020
client.unfocused        #202020 #000000 #FFFFFF #000000   #202020
client.urgent           #FF0000 #900000 #FFFFFF #900000   #900000
client.placeholder      #FFFFFF #000000 #FFFFFF #000000   #0c0c0c
client.background       #FFFFFF

# bindings
bindsym XF86AudioRaiseVolume exec --no-startup-id pactl set-sink-volume @DEFAULT_SINK@ +10%
bindsym XF86AudioLowerVolume exec --no-startup-id pactl set-sink-volume @DEFAULT_SINK@ -10%
bindsym XF86AudioMute exec --no-startup-id pactl set-sink-mute @DEFAULT_SINK@ toggle
bindsym XF86AudioMicMute exec --no-startup-id pactl set-source-mute @DEFAULT_SOURCE@ toggle
bindsym XF86MonBrightnessUp exec brightnessctl set +5%
bindsym XF86MonBrightnessDown exec brightnessctl set 5%-

floating_modifier $mod

bindsym $mod+r exec rofi -show drun

bindsym $mod+l exec i3lock -n -e -f -c 000000
bindsym $mod+q exec kitty
bindsym $mod+e exec thunar
bindsym $mod+c kill
bindsym $mod+Shift+c exec xkill
# bindsym Print exec flameshot full
bindsym Shift+Print exec maim -s | xclip -selection clipboard -t image/png

bindsym $mod+Left focus left
bindsym $mod+Down focus down
bindsym $mod+Up focus up
bindsym $mod+Right focus right

bindsym $mod+Shift+Left move left
bindsym $mod+Shift+Down move down
bindsym $mod+Shift+Up move up
bindsym $mod+Shift+Right move right

bindsym $mod+F11 fullscreen toggle

bindsym $mod+s layout stacking
bindsym $mod+w layout tabbed

bindsym $mod+v floating toggle

bindsym $mod+Shift+v focus mode_toggle

bindsym $mod+a focus parent

set $ws1 "1"
set $ws2 "2"
set $ws3 "3"
set $ws4 "4"
set $ws5 "5"
set $ws6 "6"
set $ws7 "7"
set $ws8 "8"
set $ws9 "9"
set $ws10 "10"

bindsym $mod+1 workspace number $ws1
bindsym $mod+2 workspace number $ws2
bindsym $mod+3 workspace number $ws3
bindsym $mod+4 workspace number $ws4
bindsym $mod+5 workspace number $ws5
bindsym $mod+6 workspace number $ws6
bindsym $mod+7 workspace number $ws7
bindsym $mod+8 workspace number $ws8
bindsym $mod+9 workspace number $ws9
bindsym $mod+0 workspace number $ws10

bindsym $mod+Shift+1 move container to workspace number $ws1
bindsym $mod+Shift+2 move container to workspace number $ws2
bindsym $mod+Shift+3 move container to workspace number $ws3
bindsym $mod+Shift+4 move container to workspace number $ws4
bindsym $mod+Shift+5 move container to workspace number $ws5
bindsym $mod+Shift+6 move container to workspace number $ws6
bindsym $mod+Shift+7 move container to workspace number $ws7
bindsym $mod+Shift+8 move container to workspace number $ws8
bindsym $mod+Shift+9 move container to workspace number $ws9
bindsym $mod+Shift+0 move container to workspace number $ws10

bindsym $mod+Shift+r reload
bindsym $mod+m exec i3-msg exit

mode "resize" {
        bindsym j resize shrink width 10 px or 10 ppt
        bindsym k resize grow height 10 px or 10 ppt
        bindsym l resize shrink height 10 px or 10 ppt
        bindsym semicolon resize grow width 10 px or 10 ppt
        bindsym Left resize shrink width 10 px or 10 ppt
        bindsym Down resize grow height 10 px or 10 ppt
        bindsym Up resize shrink height 10 px or 10 ppt
        bindsym Right resize grow width 10 px or 10 ppt

        bindsym Return mode "default"
        bindsym Escape mode "default"
        bindsym $mod+x mode "default"
}

bindsym $mod+x mode "resize"
